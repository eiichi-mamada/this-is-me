.question
  .question__form

    question new
    = form_with model: [:admin, @question], local: true, class: 'form' do |form|
      = form.label :content, "content" do
        = form.text_area :content, placeholder: "content", class: 'title'
      = form.label :status, "status" do
        = form.select :status, {}, {}, {class: "select-status"} do
          %option{value: 0} 過去
          %option{value: 1} 現在
          %option{value: 2} 未来
      = form.label :sub_content1, "sub_content" do
        = form.text_field :sub_content1, placeholder: "候補", class: 'sub_content1'
        -# = form.text_field :sub_content, placeholder: "候補", class: 'sub_content2'
        .more__sub--content
        -# 複数の候補を保存したい場合はJSで追加する必要がある
      = form.submit "送信", class: 'send'

    .question__form__new
      = form_with model: [:admin, @question], local: true, class: 'form' do |form|
        = form.label :content, "content" do
          = form.text_area :content, placeholder: "content", class: 'title'
        = form.label :status, "status" do
          = form.select :status, {}, {}, {class: "select-status"} do
            %option{value: 0} 過去
            %option{value: 1} 現在
            %option{value: 2} 未来
        = form.label :feature, "status" do
          = form.select :feature, {}, {}, {class: "select-status"} do
            %option{value: 0} A
            %option{value: 1} B
            %option{value: 2} C
            %option{value: 3} D
            %option{value: 4} E
            %option{value: 5} F
        = form.submit "送信", class: 'send'
