.question
  .question__form
    .question__form__new
      = form_with model: [:admin, @question], local: true, class: 'form' do |form|
        = form.label :content, "content" do
          = form.text_area :content, placeholder: "質問を入力", class: 'content'
        = form.label :status, "status" do
          = form.select :status, {}, {}, {class: "select-status"} do
            %option{value: 0} 過去
            %option{value: 1} 現在
            %option{value: 2} 未来
        = form.label :feature, "status" do
          = form.select :feature, {}, {}, {class: "select-status"} do
            %option{value: 0} 主体性
            %option{value: 1} 実行力
            %option{value: 2} 創造力
            %option{value: 3} 計画力
            %option{value: 4} コミュニケーション力
            %option{value: 5} ストレスコントロール力
        = form.submit "送信", class: 'send'
    .question__form__none
      .question__form__none__label
