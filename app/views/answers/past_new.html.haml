.answer-body
  .answer-body__form
    .answer-body__form__new
      = form_with model: @form, url:answers_path, local: true, class: 'answer-body__form__new--form' do |form|
        - @questions_past.each_with_index do |question, i|
          Q.
          = i+1
          = question.content
          .field
          = form.fields_for :answer do |f|
            = f.label :レベル
            .field-sexual-info
              = f.select :rank, {}, {}, {class: "select-status"} do
                %option{value: 0} 0
                %option{value: 1} 1
                %option{value: 2} 2
                %option{value: 3} 3
                %option{value: 4} 4
                %option{value: 5} 5
            = f.label :reason, "reason" do
              = f.text_area :reason, placeholder: "reason", class: 'title'
            // question_idを渡すために、非表示のformにquestion.idを初期値として入力させています。
            = f.number_field :question_id, value: question.id, class: "question-hidden"
            %br
        = form.submit "送信", class: 'send'
    .answer-body__form__none
      .answer-body__form__none__label
        .steam
          %img{:src => "https://www.tam-tam.co.jp/tipsnote/sample/uenaka/180119/svg/steam.svg"}/
        .steam2
          %img{:src => "https://www.tam-tam.co.jp/tipsnote/sample/uenaka/180119/svg/steam.svg"}/

