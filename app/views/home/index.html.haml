          #status-now-execution{data: {now_exec: nExec}}
            = "現在『実行力』累計: #{nExec}ポイント"
          #status-now-creativity{data: {now_crea: nCrea}}
            = "現在『創造力』累計: #{nCrea}ポイント"
          #status-now-planning{data: {now_plan: nPlan}}
            = "現在『計画力』累計: #{nPlan}ポイント"
          #status-now-teamwork{data: {now_team: nTeam}}
