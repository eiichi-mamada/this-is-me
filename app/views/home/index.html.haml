    .main-text__right
      %i.fa.fa-certificate.main-text__right--icon
        .main-text__right--icon__click
          - if @future_total_rank == [0, 0, 0, 0, 0, 0]
            = link_to "未来を分析する", future_new_answers_path
          - else
            未来の分析結果を表示する
      .main-text__right--future-bar
        %i.fa.fa-times.times03
        / チャートに関する記述ここから
        #status-wrapper
          - fInde = @future_total_rank[0]
          - fExec = @future_total_rank[1]
