- if user_signed_in?
  .main-padding
  .main-text
    .main-text__left
      %i.fa.fa-certificate.main-text__left--icon
        .main-text__left--icon__click
          - if @past_total_rank == [0, 0, 0, 0, 0, 0]
            = link_to "過去を分析する", past_new_answers_path
          - else
            過去の分析結果を表示する
      .main-text__left--past-bar
        %i.fa.fa-times.times01
        / チャートに関する記述ここから
        #status-wrapper
          - pInde = @past_total_rank[0]
          - pExec = @past_total_rank[1]
          - pCrea = @past_total_rank[2]
          - pPlan = @past_total_rank[3]
          - pTeam = @past_total_rank[4]
          - pComm = @past_total_rank[5]
          #status-past-independence{data: {past_inde: pInde}}
            = "過去『主体性』累計: #{pInde}ポイント" 
          #status-past-execution{data: {past_exec: pExec}}
            = "過去『実行力』累計: #{pExec}ポイント"
          #status-past-creativity{data: {past_crea: pCrea}}
            = "過去『創造力』累計: #{pCrea}ポイント"
          #status-past-planning{data: {past_plan: pPlan}}
            = "過去『計画力』累計: #{pPlan}ポイント"
          #status-past-teamwork{data: {past_team: pTeam}}
            = "過去『チームワーク』累計: #{pTeam}ポイント"
          #status-past-communication{data: {past_comm: pComm}}
            = "過去『コミュニケーション』累計: #{pComm}ポイント"
          / チャート描画
          %canvas#pChart{height: "400",  width: "400"}
          = link_to "診断結果の詳細を見る", past_index_answers_path
          / ここまで
          - if @past_total_rank != [0, 0, 0, 0, 0, 0]
            = link_to "回答を全て削除する",past_destroy_answers_path, method: :delete
    .main-text__center
      %i.fa.fa-certificate.main-text__center--icon
        .main-text__center--icon__click
          - if @now_total_rank == [0, 0, 0, 0, 0, 0]
            = link_to "現在を分析する", now_new_answers_path
          - else
            現在の分析結果を表示する
      .main-text__center--present-bar
        %i.fa.fa-times.times02
        / チャートに関する記述ここから
        #status-wrapper
